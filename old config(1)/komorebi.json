{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.28/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.json",
  "default_workspace_padding": 0,
  "default_container_padding": 5,
  "border": false,
  "border_width": 3,
  "stackbar": {
    "height": 10,
    "mode": "OnStack",
    "tabs": {
      "width": 50,
      "focused_text": "#21759c",
      "unfocused_text": "#21759c",
      "background": "#21759c"
    }
  },
  "mouse_follows_focus": false,

  "animation": {
    "enabled": true,
    "duration": 300,
    "style": "EaseOutQuart",
    "fps": 60
  },
  "transparency": true,
  "transparency_alpha": 200,
  "monitors": [
    {
      "workspaces": [
        {
          "name": "Main",
          "layout": "BSP"
        },
        {
          "name": "Code",
          "layout": "RightMainVerticalStack"
        },
        {
          "name": "Chat",
          "layout": "RightMainVerticalStack"
        },
        {
          "name": "IV",
          "layout": "RightMainVerticalStack"
        },
        {
          "name": "V",
          "layout": "RightMainVerticalStack"
        },
        {
          "name": "VI",
          "layout": "RightMainVerticalStack"
        },
        {
          "name": "VII",
          "layout": "RightMainVerticalStack"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "Main",
          "layout": "RightMainVerticalStack"
        },
        {
          "name": "Code",
          "layout": "RightMainVerticalStack"
        },
        {
          "name": "Chat",
          "layout": "RightMainVerticalStack"
        },
        {
          "name": "IV",
          "layout": "RightMainVerticalStack"
        },
        {
          "name": "V",
          "layout": "RightMainVerticalStack"
        },
        {
          "name": "VI",
          "layout": "RightMainVerticalStack"
        },
        {
          "name": "VII",
          "layout": "RightMainVerticalStack"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "Main",
          "layout": "RightMainVerticalStack",
          "workspace_padding": 40,
          "container_padding": 20
        },
